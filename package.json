{
  "name": "scrumble",
  "description": "dashboard connected to trello and gmail",
  "repository": {
    "type": "git",
    "url": "git@github.com:theodo/scrumble.git"
  },
  "bugs": {
    "url": "https://github.com/theodo/scrumble/issues"
  },
  "engines": {
    "node": "5.0.0"
  },
  "scripts": {
    "postinstall": "cd client && ../node_modules/.bin/bower install | xargs echo && gulp build",
    "client:watch": "node_modules/.bin/gulp watch",
    "client:start": "node_modules/.bin/gulp watch",
    "client:test": "NODE_ENV=test karma start",
    "server:start": "sleep 2 && npm run migrate:up && coffee server/src/server.coffee",
    "server:watch": "npm run migrate:up && node ./node_modules/nodemon/bin/nodemon.js server/src/server.coffee",
    "preserver:test": "db-migrate --config migrations/database.json reset -e test && db-migrate up --config migrations/database.json -e test;",
    "server:test": "NODE_ENV=test mocha 'server/test/**/*.test.coffee'",
    "migrate:up": "db-migrate up --config migrations/database.json"
  },
  "dependencies": {
    "bluebird": "3.3.5",
    "bower": "1.3.x",
    "coffee-script": "1.10.0",
    "db-migrate": "0.10.0-beta.11",
    "db-migrate-pg": "0.1.9",
    "jwt-simple": "0.5.0",
    "lodash": "4.11.1",
    "loopback": "2.27.0",
    "loopback-boot": "2.18.1",
    "loopback-component-explorer": "2.4.0",
    "loopback-connector-postgresql": "2.4.1",
    "loopback-promisify": "0.2.0",
    "moment": "2.13.0",
    "connect-history-api-fallback": "0.0.4"
  },
  "devDependencies": {
    "angular-mocks": "1.4.8",
    "chai": "3.5.0",
    "gulp": "3.9.x",
    "gulp-angular-templatecache": "1.1.x",
    "gulp-add-src": "0.2.0",
    "gulp-ng-constant": "1.1.0",
    "gulp-clean": "0.2.x",
    "gulp-coffee": "1.4.x",
    "gulp-concat": "2.1.x",
    "gulp-jade": "0.4.x",
    "gulp-less": "1.2.x",
    "gulp-plug": "0.2.4",
    "gulp-util": "2.2.x",
    "gulp-webserver": "0.3.4",
    "jade": "1.3.x",
    "jasmine": "2.4.1",
    "jasmine-core": "2.4.1",
    "karma": "0.13.19",
    "karma-coffee-preprocessor": "0.3.0",
    "karma-coverage": "0.5.3",
    "karma-jasmine": "0.3.6",
    "karma-phantomjs-launcher": "0.2.1",
    "mocha": "2.4.5",
    "nodemon": "1.9.1",
    "phantomjs": "2.1.1",
    "run-sequence": "0.3.x",
    "webdriver-manager": "0.0.4"
  },
  "version": "1.0.0",
  "main": "gulpfile.js"
}
