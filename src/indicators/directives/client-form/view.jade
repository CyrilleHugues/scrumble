md-card-content.md-padding
  h2.md-title Satisfaction survey
    md-button.md-icon-button(ng-click="print()")
      md-icon(md-svg-src="printer", aria-label="Print")
        md-tooltip(md-direction="bottom") Print
  
  md-input-container
    label Company
    md-select(ng-model="survey" aria-label="survey")
      md-option(ng-repeat="template in templates" ng-value="template") {{ template.company }}
  div(ng-repeat="question in survey.questions")
    p.question {{ question.label }}
    .answer
      md-radio-group(ng-if="question.type == 'radio'" ng-model="question.answer")
        md-radio-button.md-primary(ng-repeat="item in question.items"  ng-value="item.value") {{ item.label }}
      md-input-container.md-block(ng-if="question.type == 'textarea'")
        label Your answer...
        textarea(ng-model="question.answer" aria-label="answer")
  
  section(layout="row" layout-sm="column" layout-align="center center" layout-wrap)
    md-button.md-raised.md-primary(ng-click="save()" ng-disabled="saving") Save
