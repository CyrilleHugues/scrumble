md-dialog(aria-label='Available Dynamic Fields', ng-cloak)
  md-toolbar
    .md-toolbar-tools
      h2 Edit Template
      span(flex)
      md-button.md-icon-button(ng-click='cancel()')
        md-icon(md-svg-src='close', aria-label='Close dialog')
  md-dialog-content
    .md-dialog-content(layout="column")
      md-input-container
        label Subject
        input(ng-model="dailyReport.message.subject")
      md-input-container.md-block
        label Body (in markdown)
        textarea(ng-model="dailyReport.message.body" columns="1")
      dynamic-fields-list(available-fields='availableFields')
      div(layout="row")
        md-input-container(flex="50")
          label Behind Label
          input(ng-model="dailyReport.message.behindLabel")
        md-input-container(flex="50")
          label Ahead Label
          input(ng-model="dailyReport.message.aheadLabel")
  md-dialog-actions(layout='row')
    md-button(ng-click="save()")
      | Save
