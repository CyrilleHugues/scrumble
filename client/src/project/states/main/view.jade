h2.md-title(layout-align="center end") CHOOSE YOUR PROJECT

md-input-container.md-block
  label Search a project
  input(ng-model="searchInput")

div(ng-repeat='category in categories')
  h3 {{category.displayName}}
  md-grid-list(
    ng-cloak
    md-cols-xs="2"
    md-cols-sm="3"
    md-cols-md="4"
    md-cols-lg="5"
    md-cols-xl="8"
    md-row-height="6:3"
    md-gutter="4px"
  )
    md-grid-tile.project-tile.clickable(
      ng-repeat="board in category.boards | filter: searchInput)"
      ng-click="selectBoard(board.id)"
      ng-style="{'background-image':'url({{board.prefs.backgroundImageScaled[2].url}})'}"
    ) {{board.name}}
