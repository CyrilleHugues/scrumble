
md-content(layout-padding)
  form(name="dailyReportCreate")
    h2.md-title Daily Mail
    div(layout layout-sm="column")
      md-input-container(flex)
        label To
        input(ng-model="daily-report.to" type="email")
      md-input-container(flex)
        label Cc
        input(ng-model="daily-report.cc" type="email")
    div(layout layout-sm="column")
      md-input-container(flex)
        label Title
        input(ng-model="daily-report.title")
    div
      md-input-container.md-block
        label Body
        textarea(ng-model="daily-report.body" columns="1" rows="5")
      
      md-button.md-raised.md-primary(ng-click="send()") Send
